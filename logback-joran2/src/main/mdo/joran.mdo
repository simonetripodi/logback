<model xmlns="http://modello.codehaus.org/MODELLO/1.4.1"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://modello.codehaus.org/MODELLO/1.4.1 http://modello.codehaus.org/xsd/modello-1.4.1.xsd"
       xsd.namespace="http://logging.apache.org/log4j/2.x/">

  <id>Joran</id>
  <name>Joran</name>
  <description>The Logback configuration model</description>
  <comment>The Logback configuration model</comment>

  <defaults>
    <default>
      <key>package</key>
      <value>ch.qos.logback.core.joran.v2</value>
    </default>
  </defaults>

  <classes>
    <class xml.tagName="configuration" rootElement="true" java.builder="true" java.toString="true">
      <name>Configuration</name>
      <version>2.0.0+</version>
      <fields>
        <!-- attributes -->
        <field xml.attribute="true">
          <name>debug</name>
          <version>2.0.0+</version>
          <type>boolean</type>
          <required>true</required>
          <defaultValue>true</defaultValue>
        </field>
        <field xml.attribute="true">
          <name>scan</name>
          <version>2.0.0+</version>
          <type>boolean</type>
          <required>true</required>
          <defaultValue>false</defaultValue>
        </field>
        <field xml.attribute="true">
          <name>scanPeriod</name>
          <version>2.0.0+</version>
          <type>String</type>
          <required>false</required>
        </field>

        <field java.setter="false">
          <name>properties</name>
          <version>2.0.0+</version>
          <type>List</type>
          <association xml.itemsStyle="inline" java.init="constructor">
            <type>Property</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>

        <field>
          <name>appenders</name>
          <version>2.0.0+</version>
          <required>true</required>
          <association xml.itemsStyle="inline" java.init="constructor">
            <type>Appender</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>

        <field>
          <name>root</name>
          <version>2.0.0+</version>
          <required>true</required>
          <association>
            <type>Root</type>
            <multiplicity>1</multiplicity>
          </association>
        </field>
      </fields>
    </class>

    <class java.builder="true" java.toString="true">
      <name>Property</name>
      <version>2.0.0+</version>
      <fields>
        <field xml.attribute="true">
          <name>name</name>
          <version>2.0.0+</version>
          <type>String</type>
        </field>
        <field xml.attribute="true">
          <name>value</name>
          <version>2.0.0+</version>
          <type>String</type>
        </field>
        <field xml.attribute="true">
          <name>file</name>
          <version>2.0.0+</version>
          <type>String</type>
        </field>
        <field xml.attribute="true">
          <name>resource</name>
          <version>2.0.0+</version>
          <type>String</type>
        </field>
        <field xml.attribute="true">
          <name>scope</name>
          <version>2.0.0+</version>
          <type>String</type>
        </field>
      </fields>
    </class>

    <class java.staticCreator="true" java.toString="true">
      <name>Encoder</name>
      <version>2.0.0+</version>
      <fields>
        <field>
          <name>pattern</name>
          <version>2.0.0+</version>
          <type>String</type>
          <required>true</required>
        </field>
      </fields>
    </class>

    <class java.builder="true" java.toString="true">
      <name>Appender</name>
      <version>2.0.0+</version>
      <fields>
        <field xml.attribute="true">
          <name>name</name>
          <version>2.0.0+</version>
          <type>String</type>
          <required>true</required>
        </field>
        <field xml.attribute="true" xml.tagName="class">
          <name>type</name>
          <version>2.0.0+</version>
          <type>String</type>
          <required>true</required>
        </field>
        <field>
          <name>file</name>
          <version>2.0.0+</version>
          <type>String</type>
          <required>true</required>
        </field>
        <field>
          <name>encoder</name>
          <version>2.0.0+</version>
          <required>true</required>
          <association xml.itemsStyle="inline" java.init="constructor">
            <type>Encoder</type>
            <multiplicity>1</multiplicity>
          </association>
        </field>
      </fields>
    </class>

    <class java.staticCreator="true" java.toString="true">
      <name>Root</name>
      <version>2.0.0+</version>
      <fields>
        <field xml.attribute="true">
          <name>level</name>
          <version>2.0.0+</version>
          <type>String</type>
          <required>true</required>
          <defaultValue>debug</defaultValue>
        </field>
        <field xml.tagName="appender-ref">
          <name>appenderRef</name>
          <version>2.0.0+</version>
          <required>true</required>
          <association>
            <type>AppenderRef</type>
            <multiplicity>1</multiplicity>
          </association>
        </field>
      </fields>
    </class>

    <class java.staticCreator="true" java.toString="true">
      <name>AppenderRef</name>
      <version>2.0.0+</version>
      <fields>
        <field xml.attribute="true">
          <name>ref</name>
          <version>2.0.0+</version>
          <type>String</type>
          <required>true</required>
        </field>
      </fields>
    </class>
  </classes>

</model>
